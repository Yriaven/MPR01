<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Klasy.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Database">
            <items>
              <MenuItem fx:id="Hana" mnemonicParsing="false" onAction="#ConnectToDataBase" text="Connect to Hana" />
                  <MenuItem fx:id="d4" mnemonicParsing="false" onAction="#CheckDatabaseConnection" text="Check the Connection" />
                  <Menu mnemonicParsing="false" text="Queries:">
                    <items>
                      <MenuItem fx:id="Q1" mnemonicParsing="false" onAction="#TestQuery" text="Test query" />
                    </items>
                  </Menu>
                  <MenuItem fx:id="Dc" mnemonicParsing="false" onAction="#DisConnect" text="Disconnect " />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="WMS">
            <items>
                  <MenuItem fx:id="WM" mnemonicParsing="false" onAction="#WMS" text="Run WMS" />
                  <MenuItem fx:id="WMS3" disable="true" mnemonicParsing="false" onAction="#CustomConfig" text="Custom Configuration" />
                  <Menu mnemonicParsing="false" text="Translate...">
                    <items>
                      <MenuItem fx:id="WMS1" mnemonicParsing="false" onAction="#PowerShellRobocopy1" text="Server" />
                      <MenuItem fx:id="WMS2" mnemonicParsing="false" onAction="#PowerShellRobocopy2" text="Desktop Client" />
                        <MenuItem fx:id="catalog" mnemonicParsing="false" onAction="#Tlumaczenia" text="Files" />
                    </items>
                  </Menu>
                  <MenuItem fx:id="logi" mnemonicParsing="false" onAction="#Logi" text="Logs" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="status" text="Not connected" />
      <TableView fx:id="tabelka" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="t1" prefWidth="75.0" text="Item Name" />
          <TableColumn fx:id="t2" prefWidth="75.0" text="Item Code" />
            <TableColumn fx:id="t3" prefWidth="75.0" text="Quantity" />
        </columns>
      </TableView>
   </children>
</VBox>
