<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Database">
            <items>
              <MenuItem fx:id="Hana" mnemonicParsing="false" onAction="#ConnectToDataBase" text="Connect to Hana" />
                  <Menu mnemonicParsing="false" text="Kwerendy">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Zapytanie testowe" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="WMS">
            <items>
                <MenuItem fx:id="WMS1" mnemonicParsing="false" onAction="#RestoreServer" text="Przywróć menu główne" />
                <MenuItem fx:id="WMS2" mnemonicParsing="false" onAction="#RestoreDesktopClient" text="Przywróć klienta" />
                  <MenuItem fx:id="WMS3" mnemonicParsing="false" onAction="#CustomConfig" text="Custom Configuration" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Magazyn">
            <items>
              <MenuItem disable="true" mnemonicParsing="false" text="Stany na lokalizacjach" />
            </items>
          </Menu>

                  <Menu mnemonicParsing="false" text="Marketing">
                <items>
                    <MenuItem disable="true" mnemonicParsing="false" text="Zapytania ofertowe" />
                    <MenuItem disable="true" mnemonicParsing="false" text="Oferty sprzedaży" />
                    <MenuItem disable="true" mnemonicParsing="false" text="Umowy ramowe sprzedaży" />
                </items>
            </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="status" text="Not connected" />
   </children>
</VBox>
